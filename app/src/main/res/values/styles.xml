<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="clock_in">

        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #777777
        </item>

    </style>

    <style name="clocking_in">

        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="h1">

        <item name="android:textSize">
            22sp
        </item>

        <item name="android:textColor">
            #777777
        </item>

    </style>

    <style name="h2">

        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #777777
        </item>

    </style>


    <style name="small_text">

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textColor">
            #777777
        </item>

    </style>

    <style name="body_text">

        <item name="android:textSize">
            13sp
        </item>

        <item name="android:textColor">
            #777777
        </item>

    </style>

    <style name="time_text">

        <item name="android:textSize">
            25sp
        </item>

        <item name="android:textColor">
            #777777
        </item>

    </style>

    <style name="error_toast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@android:color/holo_red_dark</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stIconStart">@drawable/ic_error_black_24dp</item>
        <item name="stLength">LONG</item>
        LONG or SHORT
    </style>


</resources>
